{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "debug_pause",
  "description": "Pause execution of the running debuggee process",
  "type": "object",
  "properties": {
    "name": {
      "const": "debug_pause"
    },
    "parameters": {
      "type": "object",
      "properties": {},
      "additionalProperties": false
    },
    "response": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean",
          "description": "True if pause succeeded"
        },
        "state": {
          "type": "string",
          "enum": ["paused", "already_paused"],
          "description": "Resulting state"
        },
        "threads": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "description": "Thread ID"
              },
              "location": {
                "type": "object",
                "properties": {
                  "function": { "type": "string" },
                  "file": { "type": "string" },
                  "line": { "type": "integer" }
                },
                "required": ["function"]
              }
            },
            "required": ["id"]
          },
          "description": "Summary of paused threads with locations"
        }
      },
      "required": ["success", "state"]
    }
  }
}
